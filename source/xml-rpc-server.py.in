# Exception
class Fault(Exception):
  def __init__(self, value):
    self.value = value
  def __str__(self):
    return repr(self.value)

########################################
def delete_old_handles():
  """
  Helperfunction.
  """
  import time
  (con, cur) = open_db()
  ret = cur.execute("""DELETE FROM handle
      WHERE last_seen < ?""", (time.time()-(60*5),))
  close_db(con, cur)
  return ret

def is_auth(handle):
  """
  Helperfunction.
  """
  delete_old_handles()

  import time
  (con, cur) = open_db()
  cur.execute("""SELECT username, last_seen 
      FROM handle
      WHERE handle = ?""", (handle,))
  if cur.fetchone():
    cur.execute("""UPDATE handle
        SET last_seen = ?
        WHERE handle = ?""", (time.time(), handle,))
    close_db(con, cur)
    return True
  close_db(con, cur)
  raise Fault, 'handle is invalid'

